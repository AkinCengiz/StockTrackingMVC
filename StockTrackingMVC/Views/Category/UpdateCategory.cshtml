@model StockTrackingMVC.Models.Entity.Categories
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-info">Kategori Güncelleme Paneli</h2><br/>

@using (@Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div class="m-5">
        @Html.LabelFor(c => c.CategoryName)
        @Html.TextBoxFor(c => c.CategoryName,new { @class="form-control"})
    </div><br/>
    @Html.HiddenFor(c => c.CategoryID)
    <div class="m-5 p-5">
        <button class="btn btn-primary mt-5">Güncelle</button>
    </div>
}

