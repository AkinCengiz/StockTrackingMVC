@using StockTrackingMVC.Models.Entity
@model List<Employees>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-info">Personel Paneli</h2>
<br />
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Personel ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Departman</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.EmployeeID</td>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Department</td>
            <td>
                <a href="/Employee/DeleteEmployee/@employee.EmployeeID" class="btn btn-danger">Sil</a>
                <a href="/Employee/UpdateEmployee/@employee.EmployeeID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a href="/Employee/AddEmployee" class="btn btn-primary">Personel Ekle</a>
