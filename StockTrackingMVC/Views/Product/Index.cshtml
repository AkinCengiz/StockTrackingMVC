@using StockTrackingMVC.Models.Entity
@model List<Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-info">Ürünler Paneli</h2>
<br />
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Ürün ID</th>
        <th>Ürün Adı</th>
        <th>Markası</th>
        <th>Kategori</th>
        <th>Stok Miktarı</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@product.Brand</td>
            <td>@product.Categories.CategoryName</td>
            <td>@product.StockAmount</td>
            <td>@product.PurchasePrice</td>
            <td>@product.SalesPrice</td>
            <td>
                <a href="/Product/DeleteProduct/@product.ProductID" class="btn btn-danger">Sil</a>
                <a href="/Product/UpdateProduct/@product.ProductID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
    </tbody>
</table>